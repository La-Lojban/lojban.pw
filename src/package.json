{
  "name": "lojban-made-easy",
  "version": "2.0.0",
  "scripts": {
    "go": "npm i ; npm run build:test ; npm run start",
    "dev": "NODE_ENV=development next",
    "start": "npm run clearup-serve && python3 -m http.server 3000 --directory out",
    "compile": "npm run build && pkill node",
    "cicd": "npm run build  && mkdir -p out1 && cp -rT out out1 && npm run clean",
    "build-core": "next build",
    "build": "npm run clearup-serve && next telemetry disable && npm run korpora && npm run build-core && npm run print && touch out/.nojekyll && cp -avr /app/service/DNS/* out/ && cp -avr /vreji out/ && npm run cleanup",
    "build:test": "npm run clearup-serve && next telemetry disable && next build && touch out/.nojekyll && cp -avr /app/service/DNS/* out/ && cp -avr /vreji out/ && npm run cleanup",
    "korpora": "rm -rf /tmp/korpora && mkdir -p /tmp/korpora && rm -rf /app/src/md_pages/texts && mkdir -p /app/src/md_pages/texts && node lib/korpora/index.js",
    "fanva": "npm run korpora fanva",
    "print": "mkdir -p /vreji/uencu && npm run start & sleep 5 && node lib/printer && ./lib/printer/shrink-pdf.sh && npm run clearup-serve",
    "clearup-serve": "lsof -t -i:3000 | xargs --no-run-if-empty kill -9",
    "cleanup": "rm -rf /app/src/md_pages/text",
    "clean": "rm -rf node_modules && rm -rf .next",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "date-fns": "^2.30.0",
    "html-react-parser": "^4.2.2",
    "jsdom": "^22.1.0",
    "next": "14.1.2",
    "next-pwa": "^5.6.0",
    "node-html-parser": "^6.1.12",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-image-gallery": "^1.3.0",
    "sass": "^1.71.1",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@next/env": "14.1.2",
    "@playwright/test": "^1.42.1",
    "@types/jsdom": "^21.1.6",
    "@types/mermaid": "^9.2.0",
    "@types/node": "^20.11.24",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^18.2.63",
    "@types/react-dom": "^18.2.20",
    "@types/react-image-gallery": "^1.2.4",
    "autoprefixer": "^10.4.18",
    "babel-plugin-transform-define": "^2.1.4",
    "gh-pages": "^6.1.1",
    "google-spreadsheet": "^3.3.0",
    "gray-matter": "^4.0.3",
    "mermaid": "^10.4.0",
    "playwright-core": "^1.42.1",
    "postcss": "^8.4.30",
    "prettier": "^3.2.5",
    "rehype-katex": "^6.0.3",
    "rehype-parse": "^8.0.4",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
